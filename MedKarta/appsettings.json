{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Overrides": {
        "Microsoft": "Warning",
        "Sistem": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessName" ],
    "Properties": {
      "ApplicationName": "MedKarta"
    },
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "alog.txt",
              "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{ApplicationName}/{ProcessName}) {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  }
}
