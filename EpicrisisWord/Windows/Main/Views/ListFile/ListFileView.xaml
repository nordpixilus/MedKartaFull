<UserControl x:Class="EpicrisisWord.Windows.Main.Views.ListFile.ListFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpicrisisWord.Windows.Main.Views.ListFile"
             d:DataContext="{d:DesignInstance Type=local:ListFileViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Width="460">
    <Grid>

        <ListView ItemsSource="{Binding Path=Files}"
                  SelectedItem="{Binding SelectedItemListViewFile, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler" >
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="{Binding HeaderText}"
                                        DisplayMemberBinding="{Binding Path=NameFile}" Width="430" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
